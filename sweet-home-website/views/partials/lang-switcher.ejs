    <span class="lang-icon" aria-hidden="true">
      <%= (function(){
        var code = (lang || 'en').toLowerCase();
        if (code === 'es') return 'ðŸ‡ªðŸ‡¸';
        if (code === 'de') return 'ðŸ‡©ðŸ‡ª';
        return 'ðŸ‡¬ðŸ‡§';
      })() %>
    </span>
    <span class="lang-current"><%= (languageLabels && languageLabels[lang]) || (lang || 'en').toUpperCase() %></span>
  </button>
  <div id="lang-menu" class="lang-menu" role="menu" aria-hidden="true">
    <% (supportedLanguages || ['en','es','de']).forEach(function(code){ %>
      <a role="menuitem" class="lang-option <%= (lang===code ? 'is-active' : '') %>" href="/lang/<%= code %>" rel="nofollow">
