<style>
  .site-footer { 
    background: #ffffff;
    color: #333333;
    padding: 60px 0 0;
    margin-top: 80px;
    position: relative;
    border-top: 4px solid var(--primary-color, #359c4b);
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
  }
  
  .footer-wrapper { 
    max-width: 1200px; 
    margin: 0 auto; 
    padding: 0 20px 40px; 
    display: grid; 
    grid-template-columns: 2fr 1fr 1fr 1.5fr; 
    gap: 40px; 
  }
  
  .footer-col h4 { 
    font-family: 'Playfair Display', serif; 
    margin: 0 0 20px; 
    color: #1a1a1a;
    font-size: 1.25rem;
    font-weight: 600;
    position: relative;
  }
  
  .footer-col h4::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 30px;
    height: 2px;
    background: var(--primary-color, #359c4b);
    border-radius: 1px;
  }
  
  .footer-col ul { 
    list-style: none; 
    padding: 0; 
    margin: 0; 
  }
  
  .footer-col li {
    margin-bottom: 12px;
  }
  
  .footer-col a { 
    color: #666666; 
    text-decoration: none; 
    transition: all 0.3s ease;
    font-weight: 400;
    position: relative;
  }
  
  .footer-col a:hover { 
    color: var(--primary-color, #359c4b);
    transform: translateX(4px);
  }
  
  .brand { 
    display: inline-flex; 
    align-items: center; 
    gap: 15px; 
    text-decoration: none; 
    margin-bottom: 20px;
  }
  
  .brand img { 
    height: 120px; 
    width: auto; 
  }
  
  .brand-text { 
    font-family: 'Playfair Display', serif; 
    font-weight: 700; 
    color: #1a1a1a;
    font-size: 1.5rem;
  }
  
  .brand-note { 
    color: #666666; 
    margin-top: 12px;
    font-size: 1rem;
    line-height: 1.6;
    max-width: 300px;
  }
  
  .footer-bottom { 
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 24px 20px;
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    max-width: 1200px; 
    margin-left: auto; 
    margin-right: auto;
  }
  
  .copyright {
    color: #666666;
    margin: 0;
    font-size: 0.9rem;
  }
  
  .socials {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  
  .socials a { 
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: #666666;
    text-decoration: none;
    border: 2px solid #e9ecef;
    border-radius: 50%;
    transition: all 0.3s ease;
    background: #ffffff;
  }
  
  .socials a:hover {
    color: #ffffff;
    background: var(--primary-color, #359c4b);
    border-color: var(--primary-color, #359c4b);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(53, 156, 75, 0.25);
  }
  
  .socials a svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }
  
  .socials a:hover svg {
    transform: scale(1.1);
  }
  
  @media (max-width: 900px) { 
    .footer-wrapper { 
      grid-template-columns: 1fr 1fr; 
      gap: 30px;
    }
    .site-footer {
      padding: 40px 0 0;
    }
  }
  
  @media (max-width: 560px) { 
    .footer-wrapper { 
      grid-template-columns: 1fr; 
      gap: 30px;
    } 
    .footer-bottom { 
      flex-direction: column; 
      gap: 16px;
      text-align: center;
    }
    .brand img {
      height: 100px;
    }
    .socials {
      justify-content: center;
    }
  }
</style>

