<!DOCTYPE html><% 
  title = 'Sign In';
  const siteBaseUrl = (typeof baseUrl !== 'undefined' && baseUrl) 
    ? baseUrl.replace(/\/$/, '') 
    : ((process.env.APP_URL || 'https://sweethome.com').replace(/\/$/, ''));
  const loginUrl = `${siteBaseUrl}/auth/login`;
  const currentLang = (typeof lang !== 'undefined' && lang) ? String(lang).toLowerCase() : 'en';
  const supportedHreflangs = [
    { lang: 'en', country: 'US' },
    { lang: 'es', country: 'ES' },
    { lang: 'de', country: 'DE' }
  ];
  const currentHreflang = supportedHreflangs.find(h => h.lang === currentLang) || supportedHreflangs[0];
  const currentHreflangValue = currentHreflang.lang + '-' + currentHreflang.country;
%>
<html lang="<%= currentLang %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> | Sweet Home</title>
  <meta name="description" content="Sign in to your Sweet Home account to access your dashboard and manage your real estate listings.">
  <link rel="canonical" href="<%= loginUrl %>">
  <!-- Hreflang tags: Self-referencing hreflang for current language -->
  <link rel="alternate" hreflang="<%= currentHreflangValue %>" href="<%= loginUrl %>">
  <!-- All other language alternatives - all point to same URL (cookie-based language switching) -->
  <% supportedHreflangs.forEach(function(hreflang) { 
    const hreflangValue = hreflang.lang + '-' + hreflang.country;
    // Include all language alternatives (including current one for clarity, though self-referencing is above)
  %>
  <link rel="alternate" hreflang="<%= hreflangValue %>" href="<%= loginUrl %>">
  <% }); %>
  <!-- x-default must also match canonical URL exactly -->
  <link rel="alternate" hreflang="x-default" href="<%= loginUrl %>">
  <link rel="icon" type="image/png" href="/images/favicon.png" sizes="32x32">
  <link rel="stylesheet" href="/css/auth/login.css">
  <% if (process.env.RECAPTCHA_SITE_KEY) { %>
    <script src="https://www.google.com/recaptcha/api.js?render=<%= process.env.RECAPTCHA_SITE_KEY %>"></script>
  <% } %>
  <!-- No ItemList schema needed for login page as it doesn't have a carousel -->
</head>

<div class="login-wrap">
  <form action="/auth/login" method="post" class="auth-form">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <% if (process.env.RECAPTCHA_SITE_KEY) { %>
      <input type="hidden" name="recaptchaToken" id="recaptchaTokenLogin" />
    <% } %>
    <h1>Sign In</h1>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <label for="email">Email</label>
    <input id="email" name="email" type="email" autocomplete="email" required />

    <label for="password">Password</label>
    <input id="password" name="password" type="password" autocomplete="current-password" required />

    <button type="submit">Log In</button>

    <p>
      <a href="/auth/forgot">Forgot your password?</a>
    </p>

    <p>
      Don’t have an account?
      <a href="/auth/register">Register here</a>
    </p>
  </form>
</div>

<% if (awaitingApproval) { %>
  <!-- The overlay -->
  <div id="approvalModal" class="modal-overlay">
    <div class="modal-content">
      <h2>Thanks for registering!</h2>
      <p>Your <strong><%= role %></strong> account is now pending approval.</p>
      <p>Once a SuperAdmin approves it, you’ll receive an email and be able to log in.</p>
      <button id="approvalOkBtn">OK</button>
    </div>
  </div>
  <script>
    // show the modal on page load
    document.getElementById('approvalModal').style.display = 'flex';
    document.getElementById('approvalOkBtn').onclick = () => {
      document.getElementById('approvalModal').style.display = 'none';
    };
  </script>
<% } %>

<% if (process.env.RECAPTCHA_SITE_KEY) { %>
  <script>
    grecaptcha.ready(function() {
      grecaptcha.execute('<%= process.env.RECAPTCHA_SITE_KEY %>', {action: 'login'}).then(function(token) {
        var el = document.getElementById('recaptchaTokenLogin');
        if (el) el.value = token;
      });
    });
  </script>
<% } %>
</body>
</html>