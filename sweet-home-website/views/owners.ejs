<% title = title || 'For Sellers' %>
<% useMainContainer = false %>
<% hideFooter = false %>
<link rel="stylesheet" href="/css/owners.css" />
<% if (process.env.RECAPTCHA_SITE_KEY) { %>
<script src="https://www.google.com/recaptcha/api.js?render=<%= process.env.RECAPTCHA_SITE_KEY %>"></script>
<% } %>

<!-- Owners i18n for client JS -->
<div id="i18n-owners" data-i18n='<%- JSON.stringify({
  recentlySold: t("owners.recentlySold","Recently Sold"),
  validation: {
    fullName: t("owners.validation.fullName","Please enter your full name"),
    countryCode: t("owners.validation.countryCode","Please enter a country code"),
    phone: t("owners.validation.phone","Please enter a phone number"),
    email: t("owners.validation.email","Enter a valid email address"),
    language: t("owners.validation.language","Select a language")
  },
  form: {
    fixErrors: t("owners.form.fixErrors","Please fix the errors above."),
    sending: t("owners.form.sending","Sending..."),
    successShort: t("owners.form.successShort","Thanks! We will reach out shortly."),
    submitted: t("owners.form.submitted","Submission received."),
    successToast: t("owners.form.successToast","Thank you! Your message was successfully sent."),
    errorStatus: t("owners.form.errorStatus","There was a problem. Please try again."),
    errorToast: t("owners.form.errorToast","Something went wrong. Please try again later.")
  }
}).replace(/'/g, '&#39;') %>' style="display:none;"></div>

<!-- Hero -->
<section class="owners-hero" aria-label="<%= t('owners.aria.hero','Owners hero') %>">
  <div class="hero-bg" aria-hidden="true"><!-- REPLACE: hero background image URL --></div>
  <div class="hero-overlay"></div>
  <div class="hero-inner">
    <h1><%= t('owners.hero.title','Ready to sell/rent your property?') %></h1>
    <div class="cta-row" role="group" aria-label="<%= t('owners.aria.primaryActions','Primary actions') %>">
      <a href="#lead-cta" class="btn-pill btn-white"><%= t('owners.hero.cta','Contact us!') %></a>
      <a href="#recently-sold" class="btn-pill btn-outline"><%= t('owners.hero.learnMore','Learn More') %></a>
    </div>
  </div>
  <span class="sr-only"><%= t('owners.aria.heroNote','Hero background image has a decorative dark overlay to improve text contrast') %></span>
  </section>

<!-- Recently Sold – infinite sliding carousel -->
<section id="recently-sold" class="owners-recent">
  <h2 class="sr-only"><%= t('owners.recentlySold','Recently Sold') %></h2>
  <% if ((soldProperties || []).length >= 5) { %>
  <div class="sold-carousel" id="soldCarousel" data-speed="25" aria-label="<%= t('owners.aria.recentlySoldCarousel','Recently sold carousel') %>">
    <div class="sold-track">
      <% (soldProperties || []).forEach(function(p){ const bg = (p.photos && p.photos[0]) ? p.photos[0] : '/images/apartment-interior.jpg'; %>
        <article class="sold-card">
          <a href="/properties/<%= p.slug %>" aria-label="<%= t('properties.list.viewDetails','View details') %> - <%= p.title %>">
            <div class="media" style="background-image:url('<%= bg %>')"></div>
          </a>
          <div class="gradient"></div>
          <div class="overlay">
            <div class="title"><%= t('owners.recentlySold','Recently Sold') %></div>
            <div class="location"><%= (p.neighborhood ? (p.neighborhood + ', ') : '') + (p.city || '') %></div>
          </div>
        </article>
      <% }) %>
    </div>
  </div>
  <% } %>
</section>

