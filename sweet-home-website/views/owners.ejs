<div id="toast" class="toast" role="status" aria-live="polite" aria-atomic="true"></div>
<!-- Lead Form CTA -->
<section id="lead-cta" class="owners-lead">
  <h2><%= t('owners.hero.title','Ready to sell/rent your property?') %></h2>
  <div class="lead-grid">
    <form id="ownersLeadForm" class="lead-form lead-form-centered" novalidate>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <% if (process.env.RECAPTCHA_SITE_KEY) { %>
      <input type="hidden" name="recaptchaToken" id="recaptchaTokenOwners" data-site-key="<%= process.env.RECAPTCHA_SITE_KEY %>" />
      <% } %>
      <div class="form-group">
        <label for="fullName"><%= t('forms.fullName','Full name') %>*</label>
        <input id="fullName" name="name" type="text" required aria-required="true" placeholder="<%= t('forms.fullName','Full name') %>*">
        <p class="error" data-for="fullName"></p>
      </div>
      <div class="row-2">
        <div class="form-group">
          <label for="countryCode"><%= t('forms.countryCode','Country code') %>*</label>
          <input id="countryCode" name="countryCode" type="text" required aria-required="true" placeholder="+49">
          <p class="error" data-for="countryCode"></p>
        </div>
        <div class="form-group">
          <label for="phone"><%= t('forms.phoneNumber','Phone Number') %>*</label>
          <input id="phone" name="phone" type="tel" required aria-required="true" placeholder="<%= t('forms.phoneNumber','Phone Number') %>*" inputmode="tel">
          <p class="error" data-for="phone"></p>
        </div>
      </div>
      <div class="form-group">
        <label for="email"><%= t('forms.email','Email Address') %>*</label>
        <input id="email" name="email" type="email" required aria-required="true" placeholder="<%= t('forms.email','Email Address') %>*">
        <p class="error" data-for="email"></p>
      </div>
      <div class="form-group">
        <label for="language"><%= t('forms.preferredLanguage','Preferred language') %>*</label>
        <select id="language" name="language" required aria-required="true">
          <option value=""><%= t('owners.form.selectLanguage','Select language') %></option>
          <% (supportedLanguages || ['en','es','de']).forEach(function(code){ %>
            <option value="<%= code %>" <%= (lang===code ? 'selected' : '') %>><%= (languageLabels && languageLabels[code]) || code.toUpperCase() %></option>
          <% }) %>
        </select>
        <p class="error" data-for="language"></p>
      </div>
      <button type="submit" class="btn-submit"><%= t('owners.form.submit','Send') %></button>
      <p class="form-status" role="status" aria-live="polite" style="display:none"></p>
    </form>
  </div>
</section>

<script src="/js/owners.js" defer></script>
<script src="/js/owners-recaptcha.js" defer></script>


