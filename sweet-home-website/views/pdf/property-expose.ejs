<!DOCTYPE html>
<html lang="<%= lang || 'en' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= property.title %> - Expose</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @page {
      margin: 0;
      size: A4;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      color: #333;
      line-height: 1.7;
      background: #fff;
      margin: 0;
      padding: 0;
    }
    .page-logo {
      position: fixed;
      top: 12mm;
      right: 15mm;
      z-index: 1000;
    }
    .page-logo img {
      max-height: 60px;
      width: auto;
      display: block;
    }
    
    .content-wrapper {
      width: 210mm;
      padding: 12mm 15mm;
      padding-top: 80mm;
    }
    
    .page-hero {
      background: linear-gradient(135deg, #2ea862 0%, #23804b 100%);
      color: white;
      padding: 25px 20px;
      text-align: center;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .page-hero h1 {
      font-size: 26px;
      margin-bottom: 8px;
      font-weight: 700;
      line-height: 1.2;
    }
    .page-hero .location {
      font-size: 15px;
      opacity: 0.95;
      margin-bottom: 12px;
    }
    .page-hero .price {
      font-size: 28px;
      font-weight: 700;
      margin-top: 8px;
    }
    .gallery-section {
      margin: 20px 0;
    }
    .gallery-section h2 {
      font-size: 18px;
      margin-bottom: 12px;
      color: #2ea862;
      font-weight: 600;
      text-align: center;
    }
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
    .gallery-item {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 6px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .info-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
      margin: 20px 0 12px 0;
    }
    .info-card {
      background: #f8f9fa;
      padding: 12px;
      border-radius: 6px;
      border-left: 3px solid #2ea862;
    }
    .info-card h3 {
      font-size: 10px;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 6px;
      font-weight: 600;
    }
    .info-card .value {
      font-size: 16px;
      font-weight: 600;
      color: #333;
    }
    .description-section {
      margin: 12px 0;
      padding: 15px;
      background: #f8f9fa;
      border-radius: 6px;
    }
    .description-section h2 {
      font-size: 16px;
      margin-bottom: 8px;
      color: #2ea862;
      font-weight: 600;
    }
    .description-section p {
      font-size: 12px;
      line-height: 1.7;
      color: #555;
    }
    .features-section {
      margin: 12px 0;
      padding: 15px;
      background: #f8f9fa;
      border-radius: 6px;
    }
    .features-section h2 {
      font-size: 16px;
      margin-bottom: 8px;
      color: #2ea862;
      font-weight: 600;
    }
    .features-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
      list-style: none;
    }
    .features-list li {
      padding: 5px 0;
      font-size: 12px;
      color: #555;
      line-height: 1.6;
    }
    .features-list li:before {
      content: "✓ ";
      color: #2ea862;
      font-weight: bold;
      margin-right: 8px;
    }
    
    .closing-section {
      margin-top: 40px;
      padding-top: 30px;
      border-top: 2px solid #e0e0e0;
      text-align: center;
    }
    .closing-logo {
      margin-bottom: 20px;
    }
    .closing-logo img {
      max-height: 70px;
      width: auto;
    }
    .closing-section h2 {
      font-size: 22px;
      color: #2ea862;
      margin-bottom: 12px;
      font-weight: 700;
    }
    .closing-section p {
      font-size: 13px;
      color: #666;
      line-height: 1.7;
      margin-bottom: 20px;
    }
    .footer-info {
      margin-top: 25px;
      padding-top: 15px;
      border-top: 1px solid #e0e0e0;
      color: #666;
      font-size: 11px;
    }
    
    @media print {
      .description-section h2,
      .features-section h2 {
        page-break-after: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="page-logo">
    <% if (typeof logoUrl !== 'undefined' && logoUrl) { %>
      <img src="<%= logoUrl %>" alt="Sweet Home" />
    <% } else { %>
      <img src="<%= baseUrl %>/images/Sweet%20Home%20Logo.png" alt="Sweet Home" />
    <% } %>
  </div>

  <div class="content-wrapper">
    <div class="page-hero">
      <h1><%= property.title %></h1>
      <div class="location">
        <%= property.neighborhood || '' %><%= property.neighborhood && property.city ? ', ' : '' %><%= property.city || '' %><%= property.city && property.country ? ', ' : '' %><%= property.country || '' %>
      </div>
      <div class="price">€<%= Number(property.price || 0).toLocaleString('en-US') %></div>
    </div>

    <% if (property.photos && property.photos.length > 0) { %>
      <div class="gallery-section">
        <h2><%= typeof t !== 'undefined' ? t('common.pdf.gallery', 'Gallery') : 'Gallery' %></h2>
        <div class="gallery-grid">
          <% 
            property.photos.forEach(photo => { 
              const photoUrl = photo.startsWith('http') ? photo : `${baseUrl}${photo}`;
          %>
            <img src="<%= photoUrl %>" alt="<%= property.title %>" class="gallery-item" onerror="this.style.display='none';" />
          <% }); %>
        </div>
      </div>
    <% } %>

    <div class="info-grid">
      <% if (property.type) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.type', 'Type') : 'Type' %></h3>
          <% 
            const typeKey = property.type.toLowerCase();
            const translatedType = typeof t !== 'undefined' ? t(`forms.types.${typeKey}`, property.type) : property.type;
          %>
          <div class="value"><%= translatedType %></div>
        </div>
      <% } %>
      <% if (property.rooms) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.rooms', 'Rooms') : 'Rooms' %></h3>
          <div class="value"><%= property.rooms %></div>
        </div>
      <% } %>
      <% if (property.bathrooms) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.bathrooms', 'Bathrooms') : 'Bathrooms' %></h3>
          <div class="value"><%= property.bathrooms %></div>
        </div>
      <% } %>
      <% if (property.size) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.size', 'Size') : 'Size' %></h3>
          <div class="value"><%= property.size %> m²</div>
        </div>
      <% } %>
      <% if (property.year_built) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.yearBuilt', 'Year Built') : 'Year Built' %></h3>
          <div class="value"><%= property.year_built %></div>
        </div>
      <% } %>
      <% if (property.occupancy_type) { %>
        <div class="info-card">
          <h3><%= typeof t !== 'undefined' ? t('common.pdf.occupancy', 'Occupancy') : 'Occupancy' %></h3>
          <% 
            const occMap = { 'Empty': 'empty', 'Short-Term Rented': 'shortTerm', 'Suitable for Self Use': 'selfUse', 'Long-Term Rented': 'longTerm' };
            const occKey = occMap[property.occupancy_type] || null;
            const translatedOccupancy = (typeof t !== 'undefined' && occKey) ? t(`properties.detail.occupancyTypes.${occKey}`, property.occupancy_type) : property.occupancy_type;
          %>
          <div class="value"><%= translatedOccupancy %></div>
        </div>
      <% } %>
    </div>

    <% if (property.description) { %>
      <div class="description-section">
        <h2><%= typeof t !== 'undefined' ? t('common.pdf.description', 'Description') : 'Description' %></h2>
        <p><%- property.description.replace(/<br\s*\/?>/gi, '<br>').replace(/\n/g, '<br>') %></p>
      </div>
    <% } %>

    <% if (property.features && Array.isArray(property.features) && property.features.length > 0) { %>
      <div class="features-section">
        <h2><%= typeof t !== 'undefined' ? t('common.pdf.features', 'Features') : 'Features' %></h2>
        <ul class="features-list">
          <% property.features.forEach(feature => { %>
            <li><%= feature %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <div class="closing-section">
      <div class="closing-logo">
        <% if (typeof logoUrl !== 'undefined' && logoUrl) { %>
          <img src="<%= logoUrl %>" alt="Sweet Home" />
        <% } else { %>
          <img src="<%= baseUrl %>/images/Sweet%20Home%20Logo.png" alt="Sweet Home" />
        <% } %>
      </div>
      
      <h2>Sweet Home Real Estate Investments</h2>
      <p><%= typeof t !== 'undefined' ? t('common.pdf.contactUs', 'Contact us for more information about this property') : 'Contact us for more information about this property' %></p>
      
      <div class="footer-info">
        <div><%= typeof t !== 'undefined' ? t('common.pdf.generatedOn', 'Generated on') : 'Generated on' %> <%= new Date().toLocaleDateString(lang === 'de' ? 'de-DE' : (lang === 'es' ? 'es-ES' : 'en-US'), { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
      </div>
    </div>
  </div>
</body>
</html>
